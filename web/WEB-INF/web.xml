<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
         version="4.0">

    <session-config>
        <cookie-config>
            <http-only>true</http-only>
        </cookie-config>
    </session-config>

    <servlet>
        <servlet-name>PostlistServlet</servlet-name>
        <servlet-class>com.servlet.PostlistServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>PostlistServlet</servlet-name>
        <url-pattern>/servlet/PostlistServlet</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>LoginServlet</servlet-name>
        <servlet-class>com.servlet.LoginServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>LoginServlet</servlet-name>
        <url-pattern>/servlet/LoginServlet</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>PosteditServlet</servlet-name>
        <servlet-class>com.servlet.PosteditServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>PosteditServlet</servlet-name>
        <url-pattern>/servlet/PosteditServlet</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>CategoryServlet</servlet-name>
        <servlet-class>com.servlet.CategoryServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>CategoryServlet</servlet-name>
        <url-pattern>/servlet/CategoryServlet</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>CategoryEditServlet</servlet-name>
        <servlet-class>com.servlet.CategoryEditServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>CategoryEditServlet</servlet-name>
        <url-pattern>/servlet/CategoryEditServlet</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>ImgServlet</servlet-name>
        <servlet-class>com.servlet.ImgServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>ImgServlet</servlet-name>
        <url-pattern>/servlet/ImgServlet</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>CommentServlet</servlet-name>
        <servlet-class>com.servlet.CommentServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>CommentServlet</servlet-name>
        <url-pattern>/servlet/CommentServlet</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>CommentlistServlet</servlet-name>
        <servlet-class>com.servlet.CommentlistServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>CommentlistServlet</servlet-name>
        <url-pattern>/servlet/CommentlistServlet</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>TestServlet</servlet-name>
        <servlet-class>com.servlet.TestServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>TestServlet</servlet-name>
        <url-pattern>/servlet/TestServlet</url-pattern>
    </servlet-mapping>
    <filter>
        <filter-name>AdminFilter</filter-name>
        <filter-class>com.filter.AdminFilter</filter-class>
        <init-param>  <!--为过滤器指定初始化参数  -->
            <param-name>noFilterPaths</param-name>
            <param-value>index.html;login.html;success.jsp;error.jsp;blog.jsp;article.jsp;project.jsp;
                LoginServlet;PostlistServlet;PosteditServlet;CategoryServlet;CategoryEditServlet
            </param-value>
        </init-param>
    </filter>
    <filter-mapping>
        <filter-name>AdminFilter</filter-name>
        <url-pattern>/admin/*</url-pattern>
        <dispatcher>REQUEST</dispatcher>
    </filter-mapping>
</web-app>
